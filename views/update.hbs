<html>
    <head>
		<title>
			IMDb Transaction Management
		</title>
		<link href='/css/style.css' rel='stylesheet' type='text/css' />
		<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css' />
		<link rel='stylesheet' type='text/css' href='https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css' />

		<script src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js'></script>
		<script src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js'></script>
		<script type='text/javascript' charset='utf8' src='https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js'></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

		<script src="/js/home.js" type="text/javascript"></script>

	</head>

    <body style="background-color:#F1F3F4;">
		<div class = "header"> 
        	<h1 style="margin-left: 50px;">IMDb Transaction Management</h1>
			<div class = "tabs">
				<a href ="/insertPage"  class = "function">Insert</a>
				<a href="/updatePage" id = "currentPage"class = "function">Update</a>
				<a href="/searchPage" class = "function">Search</a>
			</div>
		</div>
		<div class = "inputTable">
			<form method="GET" id="my_form" action = "/updateRecord">
			<table>
				<tr>
					<td>
						<p class="inputTitle">Movie ID</p>
						<input type="number" id = "movieId" name="id" form="my_form" placeholder="Movie ID" required />
					</td>

					<td>
						<p class="inputTitle">Director</p>
						<input type="text" id = "director" name="director" form="my_form" placeholder="Director" required />
					</td>

				</tr>
				<tr>
					<td>
						<!-- <label for='title'>  Title </label> -->
						<p class="inputTitle">Title</p>
						<input type="text"  id = "movietitle" name="movie" form="my_form" placeholder="Movie Title" required />
					</td>

					<td>
						<p class="inputTitle">Actor 1</p>
						<input type="text"  id = "actor1" name="actor1" form="my_form" placeholder="Actor 1"/>
					</td>
				</tr>
				<tr>
					<td>
						<p class="inputTitle">Year</p>
						<input type="number" id = "year" name="year" form="my_form" placeholder="Year" required />
					</td>

					<td>
						<p class="inputTitle">Actor 2</p>
						<input type="text" id = "actor2" name="actor2" form="my_form" placeholder="Actor 2"/>
					</td>

				</tr>
				<tr>
					<td>
						<p class="inputTitle">Genre</p>
						<input type="text" id = "genre" name="genre" form="my_form" placeholder="Genre"/>
					</td>
				</tr>
			</table>
			<div class="actions" style="margin-top: -14px;">
				<input type='button' id='clear' onclick = "clearUpdateInputs()" value='Clear'/>
				<input type='submit' id='update-entry-btn' class='btn btn-primary' value='Update' />
			</div>
		</form>
		</div>

    </body>
</html>